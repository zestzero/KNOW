<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_form" >
	 <LinearLayout
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	 android:layout_centerHorizontal="true"
        	 android:layout_centerVertical="true"
        	 android:orientation="vertical"
        	 android:padding="50dp"
        	 >
        <TextView
            android:id="@+id/user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="ชื่อผู้ใช้"
            android:textStyle="bold" />
		<EditText
		    android:id="@+id/user_edit"
		    android:layout_width="250dp"
		    android:hint="Type your username here"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/user_txt"
		    android:layout_marginTop="5dp"
		    android:background="#FFFFFF"
		    android:textSize="12dp" 
		    android:padding="4dp"/>
		<TextView
            android:id="@+id/pwd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/user_edit"
            android:layout_marginTop="15dp"
            android:text="รหัสผ่าน"
            android:textStyle="bold" />
		<EditText
		    android:id="@+id/pwd_edit"
		    android:layout_width="250dp"
		    android:hint="Type your password here"
		    android:password="true"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/pwd_txt"
		    android:layout_marginTop="5dp"
		    android:background="#FFFFFF"
		    android:textSize="12dp"
		    android:padding="4dp" />
		<LinearLayout
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	 android:orientation="horizontal"
        	 android:layout_gravity="center_horizontal"
        	 >
		<Button
		    android:id="@+id/login_btn"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Log in"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:layout_marginTop="50dp"
		    android:layout_below="@+id/pwd_edit" 
		    />

		<Button
		    android:id="@+id/signup_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="50dp"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:text="Sign Up" />
		</LinearLayout>
		</LinearLayout>
    </RelativeLayout>
</RelativeLayout>