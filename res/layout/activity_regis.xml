<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal" >
 <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:paddingTop="150dp">
        <TextView
            android:id="@+id/user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อผู้ใช้"
            android:textStyle="bold" />
		<EditText
		    android:id="@+id/user_edit"
		    android:layout_width="250dp"
		    android:hint="Type your username here"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/user_txt"
		    android:layout_marginTop="5dp"
		    android:background="#FFFFFF"
		    android:textSize="12dp" 
		    android:padding="4dp"/>
		<TextView
            android:id="@+id/pwd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_edit"
            android:layout_marginTop="15dp"
            android:text="รหัสผ่าน"
            android:textStyle="bold" />
		<EditText
		    android:id="@+id/pwd_edit"
		    android:layout_width="250dp"
		    android:hint="Type your password here"
		    android:password="true"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/pwd_txt"
		    android:layout_marginTop="5dp"
		    android:background="#FFFFFF"
		    android:textSize="12dp"
		    android:padding="4dp" />
		<TextView
            android:id="@+id/confirm_pwd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pwd_edit"
            android:layout_marginTop="15dp"
            android:text="ยืนยันรหัสผ่าน"
            android:textStyle="bold" />
		<EditText
		    android:id="@+id/confirm_pwd_edit"
		    android:layout_width="250dp"
			android:password="true"
		    android:hint="Type your password here again"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/confirm_pwd_txt"
		    android:layout_marginTop="5dp"
		    android:background="#FFFFFF"
		    android:textSize="12dp" 
		    android:padding="4dp"/>
		<TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_pwd_edit"
            android:layout_marginTop="15dp"
            android:text="อีเมลล์"
            android:textStyle="bold" />
		<EditText
		    android:id="@+id/email_edit"
		    android:layout_width="250dp"
		    android:hint="Type your email here"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/email_txt"
		    android:layout_marginTop="5dp"
		    android:background="#FFFFFF"
		    android:textSize="12dp"
		    android:padding="4dp" />
		<Button
		    android:id="@+id/confirm_btn"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Sign up"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:layout_marginTop="50dp"
		    android:layout_below="@+id/email_edit" 
		    />
		<Button
		    android:id="@+id/cancel_btn"
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Cancle"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp" 
		    android:layout_marginTop="50dp"
		    android:layout_below="@+id/email_edit" 
		    android:layout_toRightOf="@+id/confirm_btn"
		    />
    </RelativeLayout>
</RelativeLayout>